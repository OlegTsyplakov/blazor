@page "/"

@namespace Site.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Site.Data.Mobile mobile
@using Site.Data
@{
    Layout = null;


}

<!DOCTYPE html>
<html lang="@Lang.lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <base href="~/" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&apikey=cdf524ed-5332-4a8f-b991-0066eec2d83d&load=package.full"></script>
    @if (mobile.IsMobile)
    {
        <script src="/js/byrpex_mobile.js" type="module"></script>
        <link href="/css/mobile/hf_mobile.css" rel="stylesheet" />
    }
    else
    {
        <script src="/js/byrpex.js" type="module"></script>
        <link href="/css/desktop/hf.css" rel="stylesheet" />
        <link href="/css/desktop/cartpopup.css" rel="stylesheet" />
    }

    <script src="/js/jquery.suggestions.min.js"></script>

    <link rel="shortcut icon" href="/img/ico/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="57x57" href="/img/ico/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/img/ico/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/img/ico/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/img/ico/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/img/ico/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/img/ico/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/img/ico/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/img/ico/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/img/ico/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/img/ico/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/ico/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/img/ico/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/ico/favicon-16x16.png">

</head>
<body>
 
    @if (mobile.IsMobile)
    {
        <component type="typeof(App_mobile)" render-mode="ServerPrerendered" />
    }
    else
    {

        <component type="typeof(App)" render-mode="ServerPrerendered" />
    }


    <script src="_framework/blazor.server.js"></script>

</body>
</html>

